<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_marginTop="3dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_dp"/>

        <TextView
            android:id="@+id/nameFragment"
            android:paddingHorizontal="@dimen/small_dp"
            style="@style/MediumText"
            android:layout_margin="@dimen/small_dp"
            android:layout_width="0dp"
            android:layout_weight="80"
            />

        <ImageView
            android:id="@+id/btnMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more_ico_black"
            android:layout_marginTop="@dimen/large_dp"/>

        <ImageView
            android:id="@+id/btnRemove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/trash_ico_red"
            android:layout_marginHorizontal="@dimen/small_dp"
            android:layout_marginTop="@dimen/large_dp"/>

    </LinearLayout>


</RelativeLayout>